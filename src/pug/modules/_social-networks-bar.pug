mixin social-networks-bar(obj, className)
    ul(class=`social-networks-bar social-networks-bar_${className}`)
        each elem, key in obj
            li.social-networks-bar__item
                a.social-networks-bar__link(href=elem)
                    case key
                        when "twitter"
                            img.social-networks-bar__icon(src="assets/twitter-icon.svg" alt="twitter")
                        when "telegram"
                            img.social-networks-bar__icon(src="assets/telegram-icon.svg" alt="telegram")
                        when "instagram"
                            img.social-networks-bar__icon(src="assets/instagram-icon.svg" alt="instagram")
                        when "twitch"
                            img.social-networks-bar__icon(src="assets/twitch-icon.svg" alt="twitch")
                        when "github"
                            img.social-networks-bar__icon(src="assets/github-icon.svg" alt="github")
                        when "linkedin"
                            img.social-networks-bar__icon(src="assets/linkedin-icon.svg" alt="linkedin")
                        when "email"
                            img.social-networks-bar__icon(src="assets/email-icon.svg" alt="email")